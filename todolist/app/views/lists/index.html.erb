<p id="notice"><%= notice %></p>

<h1>Lista rzeczy do zrobienia</h1>

<form>
	<table class="table">
	  <thead>
		<tr>
		  <th>Tytuł</th>
		  <th>Zawartość</th>
		  <th>Data</th>
		  <th colspan="3"></th>
		</tr>
	  </thead>

	  <tbody>
		<% @lists.each do |list| %>
		  <tr>
		    <td><%= list.title %></td>
		    <td><%= list.content %></td>
		    <td><%= list.date %></td>
		    <td><%= link_to 'Podgląd', list %></td>
		    <td><%= link_to 'Edycja', edit_list_path(list) %></td>
		    <td><%= link_to 'Usuń', list, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></td>
		  </tr>
		<% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'Nowa czynność', new_list_path, { :class=>"btn btn-primary" } %>
</form>
